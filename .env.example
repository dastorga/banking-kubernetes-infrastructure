# Banking K8s Infrastructure - Environment Configuration
# Copy this file to .env and modify the values as needed

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENVIRONMENT=development
APP_NAME=banking-digital
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://banking_user:secure_password_123@localhost:5432/banking_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=banking_db
DATABASE_USER=banking_user
DATABASE_PASSWORD=secure_password_123

# PostgreSQL specific settings
POSTGRES_DB=banking_db
POSTGRES_USER=banking_user
POSTGRES_PASSWORD=secure_password_123

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==============================================
# SECURITY SETTINGS
# ==============================================
JWT_SECRET=super-secret-jwt-key-for-banking-app-2024-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://banking.local

# ==============================================
# KUBERNETES CONFIGURATION
# ==============================================
KUBERNETES_NAMESPACE=banking-app
KUBERNETES_CONTEXT=minikube

# ==============================================
# MINIKUBE SETTINGS
# ==============================================
MINIKUBE_DRIVER=docker
MINIKUBE_MEMORY=4096
MINIKUBE_CPUS=2

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
DOCKER_REGISTRY=
DOCKER_TAG=latest
DOCKER_BUILDKIT=1

# Backend Image
BACKEND_IMAGE=banking-backend:latest
FRONTEND_IMAGE=banking-frontend:latest

# ==============================================
# AWS CONFIGURATION (for future cloud deployment)
# ==============================================
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# EKS Configuration
EKS_CLUSTER_NAME=banking-eks-cluster
EKS_NODE_GROUP_NAME=banking-nodes

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Prometheus
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# ==============================================
# NOTIFICATION SETTINGS
# ==============================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@banking.com

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Payment Gateway
PAYMENT_GATEWAY_URL=
PAYMENT_GATEWAY_API_KEY=

# Banking Core System
CORE_BANKING_URL=
CORE_BANKING_API_KEY=

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
RELOAD_ON_CHANGE=true
DEVELOPMENT_MODE=true

# Testing
TEST_DATABASE_URL=postgresql://banking_user:secure_password_123@localhost:5432/banking_test_db

# ==============================================
# BACKUP & STORAGE
# ==============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# S3 Backup Configuration
S3_BACKUP_BUCKET=banking-backups
S3_BACKUP_PREFIX=database-backups/

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/banking.crt
SSL_KEY_PATH=/etc/ssl/private/banking.key

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_TRANSFERS=true
FEATURE_PAYMENTS=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true